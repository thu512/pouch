<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SearchActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/middle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            >


            <TextView
                android:id="@+id/direct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:paddingBottom="5dp"
                android:text="@string/dir_text"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/bacode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="65dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:paddingBottom="5dp"
                android:text="@string/bac_text"
                android:textAlignment="center"
                android:textColor="#cccccc"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/direct"
                app:layout_constraintEnd_toStartOf="@+id/direct"
                app:layout_constraintTop_toTopOf="@+id/direct" />

            <Button
                android:id="@+id/exit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="107dp"
                android:background="@drawable/close_24_px"
                app:layout_constraintBottom_toBottomOf="@+id/direct"
                app:layout_constraintStart_toEndOf="@+id/direct"
                app:layout_constraintTop_toTopOf="@+id/direct" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/middle"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top"
            >


            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="1dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="화장품 이름을 검색해보세요 :)"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="8sp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textCursorDrawable="@drawable/cusor"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/search"
                android:stateListAnimator="@null"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:background="@drawable/padding_group_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/name"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/not_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/middle"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/not_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#000000"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="찾는 제품이 없습니다.\n해당 이름으로 등록할까요?"
                app:layout_constraintTop_toTopOf="@+id/not_item"
                app:layout_constraintBottom_toBottomOf="@+id/not_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="78dp"
                />

                <Button
                    android:id="@+id/register"
                    android:layout_width="62dp"
                    android:layout_height="36dp"
                    android:background="@drawable/register_icon"
                    app:layout_constraintTop_toBottomOf="@+id/not_msg"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:stateListAnimator="@null"
                    />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/middle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>